<div class="role-edit-row">
    <div class="role-edit">
        <p style="color:@color">
            @Role.Name
        </p>
    </div>
    <div class="btn-role-edit edit">
        <p class="center-t">
            Edit
        </p>
    </div>
    <div class="btn-role-edit delete">
        <p class="center-t">
            Delete
        </p>
    </div>
</div>


@code {
    [Parameter]
    public PlanetRole Role { get; set; }

    public string color;

    protected override async Task OnInitializedAsync()
    {
        color = Role.GetColorHex();
    }
}
